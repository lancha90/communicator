<script type="text/javascript" charset="utf-8">
	$(document).ready(function() {
		$('#show_private').dataTable();
	}); 
</script>

<div>
	<h1>Mensajes Enviados</h1>

	<table class="table" id="show_private">
		<thead>
			<tr>
				<th>Usuario</th>
				<th>Asundo</th>
				<th></th>
			</tr>
		</thead>
		<% @private_messages.each do |private_message| %>
		<tr>
			<td><%= private_message.user.firtname %> <%= private_message.user.secondname %></td>
			<td><%= private_message.subject %></td>
			<td><%= link_to image_tag("icon_view.png", :border=>0), private_message %>
			<%= link_to image_tag("icon_edit.png", :border=>0), edit_private_message_path(private_message) %>
			<%= link_to image_tag("icon_delete.png", :border=>0), private_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</table>

	<br />
</div>

